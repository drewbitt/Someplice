{
	"name": "someplice",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:deno": "cross-env BUILD_ENV=deno vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --cache --ignore-path ./config/.prettierignore --check . && eslint --ignore-path ./config/.eslintignore .",
		"format": "prettier --cache --ignore-path ./config/.prettierignore --write .",
		"db:codegen": "kysely-codegen --out-file ./src/lib/types/data.d.ts && prettier --cache --ignore-path ./config/.prettierignore --write ./src/lib/types/data.d.ts",
		"db:migrate": "vite-node ./src/lib/db/migrate-to-latest.ts",
		"db:migrate:single": "vite-node ./src/lib/db/migrate-to-latest.ts --migration"
	},
	"dependencies": {
		"@svelteuidev/composables": "^0.15.3",
		"@svelteuidev/core": "^0.15.3",
		"@trpc/client": "^10.38.5",
		"@trpc/server": "^10.38.5",
		"better-sqlite3": "^8.7.0",
		"croner": "^7.0.2",
		"devalue": "^4.3.2",
		"kysely": "^0.26.3",
		"trpc-sveltekit": "^3.5.21",
		"tslog": "^4.9.2",
		"vite-node": "^0.34.6",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@iconify-json/lucide": "^1.1.130",
		"@ngneat/falso": "^7.1.1",
		"@playwright/test": "^1.38.1",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.25.1",
		"@types/better-sqlite3": "^7.6.5",
		"@types/node": "^20.8.2",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"@vite-pwa/sveltekit": "^0.2.7",
		"autoprefixer": "^10.4.16",
		"cross-env": "^7.0.3",
		"daisyui": "^3.8.3",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.2",
		"kysely-codegen": "^0.10.1",
		"postcss": "^8.4.31",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"svelte-dnd-action": "^0.9.30",
		"svelte-preprocess": "^5.0.4",
		"sveltekit-adapter-deno": "^0.11.2",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"unplugin-icons": "^0.17.0",
		"vite": "^4.4.9",
		"vite-plugin-pwa": "^0.16.5",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"eslintConfig": {
		"extends": "./config/.eslintrc.cjs"
	}
}
