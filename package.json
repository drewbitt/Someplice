{
	"name": "someplice",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:deno": "cross-env BUILD_ENV=deno vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --cache --ignore-path ./config/.prettierignore --check . && eslint --ignore-path ./config/.eslintignore .",
		"format": "prettier --cache --ignore-path ./config/.prettierignore --write .",
		"db:codegen": "kysely-codegen --out-file ./src/lib/types/data.d.ts && prettier --cache --ignore-path ./config/.prettierignore --write ./src/lib/types/data.d.ts",
		"db:migrate": "vite-node ./src/lib/db/migrate-to-latest.ts",
		"db:migrate:single": "vite-node ./src/lib/db/migrate-to-latest.ts --migration"
	},
	"dependencies": {
		"@svelteuidev/composables": "^0.15.4",
		"@svelteuidev/core": "^0.15.4",
		"@trpc/client": "^10.45.2",
		"@trpc/server": "^10.45.2",
		"better-sqlite3": "^9.4.5",
		"croner": "^8.0.1",
		"devalue": "^4.3.2",
		"kysely": "^0.27.3",
		"trpc-sveltekit": "^3.6.1",
		"tslog": "^4.9.2",
		"vite-node": "^1.4.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@iconify-json/lucide": "^1.1.179",
		"@ngneat/falso": "^7.2.0",
		"@playwright/test": "^1.43.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.30.4",
		"@types/better-sqlite3": "^7.6.9",
		"@types/node": "^20.12.4",
		"@typescript-eslint/eslint-plugin": "^7.5.0",
		"@typescript-eslint/parser": "^7.5.0",
		"@vite-pwa/sveltekit": "^0.4.0",
		"autoprefixer": "^10.4.19",
		"cross-env": "^7.0.3",
		"daisyui": "^3.9.4",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"kysely-codegen": "^0.14.2",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.9",
		"svelte-dnd-action": "^0.9.42",
		"svelte-preprocess": "^5.1.3",
		"sveltekit-adapter-deno": "^0.12.1",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.4",
		"unplugin-icons": "^0.18.5",
		"vite": "^5.2.8",
		"vite-plugin-pwa": "^0.19.7",
		"vitest": "^1.4.0"
	},
	"type": "module",
	"eslintConfig": {
		"extends": "./config/.eslintrc.cjs"
	}
}
