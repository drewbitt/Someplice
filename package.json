{
	"name": "someplice",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:deno": "cross-env BUILD_ENV=deno vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --cache --ignore-path ./config/.prettierignore --check . && eslint -c ./config/eslint.config.js .",
		"format": "prettier --cache --ignore-path ./config/.prettierignore --write .",
		"db:codegen": "kysely-codegen --out-file ./src/lib/types/data.d.ts && prettier --cache --ignore-path ./config/.prettierignore --write ./src/lib/types/data.d.ts",
		"db:migrate": "vite-node ./src/lib/db/migrate-to-latest.ts",
		"db:migrate:single": "vite-node ./src/lib/db/migrate-to-latest.ts --migration"
	},
	"dependencies": {
		"@svelteuidev/composables": "^0.15.7",
		"@svelteuidev/core": "^0.15.7",
		"@trpc/client": "^11.8.1",
		"@trpc/server": "^11.8.1",
		"better-sqlite3": "^12.6.2",
		"croner": "^9.1.0",
		"devalue": "^5.6.2",
		"kysely": "^0.28.10",
		"tslog": "^4.10.2",
		"vite-node": "^5.3.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@eslint/js": "^9.39.2",
		"@iconify-json/lucide": "^1.2.86",
		"@ngneat/falso": "^8.0.2",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.10.9",
		"@vite-pwa/sveltekit": "^1.1.0",
		"cross-env": "^10.1.0",
		"daisyui": "^5.5.14",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"kysely-codegen": "^0.19.0",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.0",
		"svelte-check": "^4.3.5",
		"svelte-dnd-action": "^0.9.69",
		"svelte-preprocess": "^6.0.3",
		"sveltekit-adapter-deno": "^0.16.1",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"unplugin-icons": "^23.0.1",
		"vite": "^7.3.1",
		"vite-plugin-pwa": "^1.2.0",
		"vitest": "^4.0.18",
		"workbox-build": "^7.4.0",
		"workbox-window": "^7.4.0"
	},
	"type": "module",
	"packageManager": "pnpm@10.28.1",
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3"
		]
	}
}
