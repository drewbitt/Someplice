{
	"name": "someplice",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:deno": "cross-env BUILD_ENV=deno vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --cache --ignore-path ./config/.prettierignore --check . && eslint -c ./config/eslint.config.js .",
		"format": "prettier --cache --ignore-path ./config/.prettierignore --write .",
		"db:codegen": "kysely-codegen --out-file ./src/lib/types/data.d.ts && prettier --cache --ignore-path ./config/.prettierignore --write ./src/lib/types/data.d.ts",
		"db:migrate": "vite-node ./src/lib/db/migrate-to-latest.ts",
		"db:migrate:single": "vite-node ./src/lib/db/migrate-to-latest.ts --migration"
	},
	"dependencies": {
		"@svelteuidev/composables": "^0.15.7",
		"@svelteuidev/core": "^0.15.7",
		"@trpc/client": "^10.45.2",
		"@trpc/server": "^10.45.2",
		"better-sqlite3": "^11.10.0",
		"croner": "^8.1.2",
		"devalue": "^5.4.2",
		"kysely": "^0.28.8",
		"trpc-sveltekit": "^3.6.3",
		"tslog": "^4.10.2",
		"vite-node": "^2.1.9",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.39.1",
		"@iconify-json/lucide": "^1.2.73",
		"@ngneat/falso": "^7.4.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/better-sqlite3": "^7.6.13",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.19.24",
		"@vite-pwa/sveltekit": "^0.6.8",
		"autoprefixer": "^10.4.22",
		"cross-env": "^7.0.3",
		"daisyui": "^4.12.24",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^16.5.0",
		"kysely-codegen": "^0.19.0",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^4.2.20",
		"svelte-check": "^4.3.4",
		"svelte-dnd-action": "^0.9.67",
		"svelte-preprocess": "^6.0.3",
		"sveltekit-adapter-deno": "^0.16.1",
		"tailwindcss": "^3.4.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4",
		"unplugin-icons": "^0.22.0",
		"vite": "^5.4.21",
		"vite-plugin-pwa": "^0.21.2",
		"vitest": "^2.1.9"
	},
	"type": "module",
	"packageManager": "pnpm@9.15.9"
}
