{
	"name": "someplice",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:deno": "cross-env BUILD_ENV=deno vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --cache --ignore-path ./config/.prettierignore --check . && eslint -c ./config/eslint.config.js .",
		"format": "prettier --cache --ignore-path ./config/.prettierignore --write .",
		"db:codegen": "kysely-codegen --out-file ./src/lib/types/data.d.ts && prettier --cache --ignore-path ./config/.prettierignore --write ./src/lib/types/data.d.ts",
		"db:migrate": "vite-node ./src/lib/db/migrate-to-latest.ts",
		"db:migrate:single": "vite-node ./src/lib/db/migrate-to-latest.ts --migration"
	},
	"dependencies": {
		"@svelteuidev/composables": "^0.15.7",
		"@svelteuidev/core": "^0.15.7",
		"@trpc/client": "^11.0.0",
		"@trpc/server": "^11.0.0",
		"better-sqlite3": "^12.0.0",
		"croner": "^9.0.0",
		"devalue": "^5.1.1",
		"kysely": "^0.27.4",
		"trpc-sveltekit": "^3.6.2",
		"tslog": "^4.9.3",
		"vite-node": "^5.0.0",
		"zod": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.0.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/js": "^9.13.0",
		"@iconify-json/lucide": "^1.2.10",
		"@ngneat/falso": "^8.0.0",
		"@playwright/test": "^1.48.1",
		"@sveltejs/adapter-node": "^5.2.8",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/better-sqlite3": "^7.6.11",
		"@types/node": "^24.0.0",
		"@vite-pwa/sveltekit": "^1.0.0",
		"autoprefixer": "^10.4.20",
		"cross-env": "^10.0.0",
		"daisyui": "^5.0.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^10.0.0",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.4.0",
		"kysely-codegen": "^0.17.0",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.5",
		"svelte-dnd-action": "^0.9.52",
		"svelte-preprocess": "^6.0.3",
		"sveltekit-adapter-deno": "^0.14.0",
		"tailwindcss": "^4.0.0",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.11.0",
		"unplugin-icons": "^22.0.0",
		"vite": "^7.0.0",
		"vite-plugin-pwa": "^1.0.0",
		"vitest": "^4.0.0"
	},
	"type": "module",
	"packageManager": "pnpm@10.0.0"
}
