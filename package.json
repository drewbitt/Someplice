{
	"name": "someplice",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --cache --ignore-path ./config/.prettierignore --plugin-search-dir . --check . && eslint --ignore-path ./config/.eslintignore .",
		"format": "prettier --cache --ignore-path ./config/.prettierignore --plugin-search-dir . --write .",
		"db:codegen": "kysely-codegen --out-file ./src/lib/types/data.d.ts && prettier --cache --ignore-path ./config/.prettierignore --plugin-search-dir . --write ./src/lib/types/data.d.ts",
		"db:migrate": "vite-node ./src/lib/db/migrate-to-latest.ts",
		"db:migrate:single": "vite-node ./src/lib/db/migrate-to-latest.ts --migration"
	},
	"dependencies": {
		"@svelteuidev/composables": "^0.14.0",
		"@svelteuidev/core": "^0.14.0",
		"@trpc/client": "^10.34.0",
		"@trpc/server": "^10.34.0",
		"better-sqlite3": "^8.4.0",
		"croner": "^6.0.6",
		"kysely": "^0.26.1",
		"trpc-sveltekit": "^3.5.16",
		"tslog": "^4.8.2",
		"vite-node": "^0.33.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@iconify-json/lucide": "^1.1.109",
		"@ngneat/falso": "^6.4.0",
		"@playwright/test": "^1.35.1",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.22.1",
		"@types/better-sqlite3": "^7.6.4",
		"@types/node": "^20.4.1",
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"@vite-pwa/sveltekit": "^0.2.5",
		"autoprefixer": "^10.4.14",
		"daisyui": "^3.2.1",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.2",
		"kysely-codegen": "^0.10.1",
		"postcss": "^8.4.25",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.5",
		"svelte-dnd-action": "^0.9.24",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"unplugin-icons": "^0.16.3",
		"vite": "^4.4.2",
		"vite-plugin-pwa": "^0.16.4",
		"vitest": "^0.33.0"
	},
	"type": "module",
	"eslintConfig": {
		"extends": "./config/.eslintrc.cjs"
	}
}
