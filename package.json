{
	"name": "someplice",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:deno": "cross-env BUILD_ENV=deno vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --cache --ignore-path ./config/.prettierignore --check . && eslint -c ./config/eslint.config.js .",
		"format": "prettier --cache --ignore-path ./config/.prettierignore --write .",
		"db:codegen": "kysely-codegen --out-file ./src/lib/types/data.d.ts && prettier --cache --ignore-path ./config/.prettierignore --write ./src/lib/types/data.d.ts",
		"db:migrate": "vite-node ./src/lib/db/migrate-to-latest.ts",
		"db:migrate:single": "vite-node ./src/lib/db/migrate-to-latest.ts --migration"
	},
	"dependencies": {
		"@svelteuidev/composables": "^0.15.7",
		"@svelteuidev/core": "^0.15.7",
		"@trpc/client": "^10.45.2",
		"@trpc/server": "^10.45.2",
		"better-sqlite3": "^11.4.0",
		"croner": "^8.1.2",
		"devalue": "^5.1.1",
		"kysely": "^0.27.4",
		"trpc-sveltekit": "^3.6.2",
		"tslog": "^4.9.3",
		"vite-node": "^2.1.3",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@eslint/js": "^9.12.0",
		"@iconify-json/lucide": "^1.2.10",
		"@ngneat/falso": "^7.2.0",
		"@playwright/test": "^1.48.1",
		"@sveltejs/adapter-node": "^5.2.8",
		"@sveltejs/kit": "^2.7.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/better-sqlite3": "^7.6.11",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.16.12",
		"@vite-pwa/sveltekit": "^0.6.5",
		"autoprefixer": "^10.4.20",
		"cross-env": "^7.0.3",
		"daisyui": "^4.12.13",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"globals": "^15.11.0",
		"kysely-codegen": "^0.16.8",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.5",
		"svelte-dnd-action": "^0.9.51",
		"svelte-preprocess": "^6.0.3",
		"sveltekit-adapter-deno": "^0.14.0",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.10.0",
		"unplugin-icons": "^0.19.3",
		"vite": "^5.4.9",
		"vite-plugin-pwa": "^0.20.5",
		"vitest": "^2.1.3"
	},
	"type": "module",
	"packageManager": "pnpm@9.12.2"
}
